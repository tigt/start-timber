<form class="comment-form" method="post" action="{{ site.url~'/wp-comments-post.php' }}">
  <h3>Add comment</h3>

  <input type="hidden" name="comment_post_ID" value="{{ post.id }}">
  <input type="hidden" name="comment_parent" value="{{ comment.ID|default('0') }}">

  {% if user %}
    <input type="hidden" name="email" value="{{ user.email }}">
    <input type="hidden" name="author" value="{{ user.name }}">
    <input type="hidden" name="url" value="{{ user.link }}">
  {% else %}
    <p>
      <label>Email
        <input type="email" name="email" required>
      </label>
    </p>

    <p>
      <label>Username
        <input name="author" required>
      </label>
    </p>

    <p>
      <label>URL
        <input name="url" type="url">
      </label>
    </p>
  {% endif %}

  <p>
    <label>Comment
      <textarea name="comment"></textarea>
    </label>
  </p>

  <p>
    <button type="submit">Submit</button>
  </p>

  <p>Your comment may be moderated or revised.</p>
</form>
