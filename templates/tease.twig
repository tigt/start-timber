<article class="tease tease-type-{{post.post_type}}" id="tease-{{post.ID}}">
  {% block content %}
    <h2 class="tease_title">
      <a href="{{post.link}}" class="tease_title_link">{{post.title}}</a>
    </h2>

    <p>{{post.get_preview}}</p>

    {% if post.get_thumbnail %}
      <img src="{{post.thumbnail.src}}" alt="" class="tease_img">
    {% endif %}
  {% endblock %}
</article>
